<%= link_to "Back to home", lists_path %>
<%= link_to "Add bookmark", new_list_bookmark_path(@list.id) %>

<p>
  <%= @list.name%>
</p>


<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <% @list.movies.each do |movie| %>
      <div class="col-4">
        <div class="card-title">
            <h5 class="card-title"> <%= movie.title%></h5>
            <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
            <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "card-remove-link" %>

      <%# <%= button_for "Delete Bookmark", bookmark %>
        </div>
      </div>
    <% end %>
    <p class="card-text">
    </p>
  </div>
</div>
